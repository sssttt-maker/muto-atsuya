<h1>Gallery</h1>
<% if @gallery.errors.present? %>
  <ul id="error_explanation">
    <% @gallery.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: [ :admin, @gallery ], local: true) do |f| %>
  <div class="form-group">
    <%= f.label :images %>
    <%= f.file_field :images, multiple: true, class: 'form-control-file img-upload' %>
    <div class="preview"></div>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5, class: 'form-control' %>
  </div>
  <%= f.submit :send, class: 'submit-btn' %>
<% end %>
