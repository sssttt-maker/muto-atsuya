<div class="post">
  <div class="post-sub">
    <h1 class="post-title">
      <%= @post.title %>
      <% if @post.user == current_user %>
        <span class="post-edit"><%= link_to '編集', edit_admin_post_path(@post) %></span>
      <% end %>
    </h1>
    <ul class="post-category">
      <% @post.categories.each do |category| %>
        <li class="item">
          <%= category.name %>
        </li>
      <% end %>
    </ul>
    <p class="post-date">
      <%= @post.created_at.to_s(:datetime) %>
    </p>
    <div class="post-img">
      <%= image_tag(@post.post_thumbnail) if @post.image.attached? %>
    </div>
  </div>
  <div class="post-main">
    <div class="post-text">
      <%== @post.text %>
    </div>
  </div>
</div>
