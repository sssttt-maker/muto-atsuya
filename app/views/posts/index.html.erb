<div class="main">
  <h1 class="page-title">Blog</h1>
  <div class="slide-wrapper">
    <ul class="post-slider">
      <% @posts.each do |post| %>
      <li>
        <%= link_to post_path(post) do %>
        <%= image_tag(post.custom_thumbnail(300, 300, 200, 200), class: 'slide-img') %>
        <span><%= post.title %></span>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>



  <div class="row">
    <h2 class="section-title">New Posts</h2>
    <% @posts.each do |post| %>
    <div class="cp_card02 col-lg-4 col-md-6">
      <%= link_to post_path(post) do %>
      <div class="photo photo1">
        <% if post.image.attached? %>
        <%= image_tag(post.thumbnail) %>
        <% else %>
        <img src="/assets/no-image.png" width="200" height="200" />
        <% end %>
      </div>
      <ul class="details">
        <li class="date"><%= post.created_at.to_s(:datetime) %></li>
      </ul>
      <div class="description">
        <h1><%= post.title %></h1>
        <p class="text">aaaaaaaaa</p>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
